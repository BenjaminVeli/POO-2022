package sem02;
import java.util.Scanner;

public class Ejercicio1 {

    //Hallar la Hipotenusa //

    public static void main(String[]args) {
        Scanner constructor=new Scanner(System.in);

        System.out.print("Ingrese el valor del Cateto Adyacente: ");
        double ca=constructor.nextDouble();

        System.out.print("Ingrese el valor del Cateto Opuesto: ");
        double co=constructor.nextDouble();

        ca=Math.pow(ca,2);
        co=Math.pow(co,2);

        double h=Math.sqrt(ca+co);

        System.out.println("------------------------------------------");
        System.out.println("El valor de la Hipotenusa es: "+h);

    }
}
